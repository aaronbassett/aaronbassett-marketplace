{
  "theme": "tokyo-night",
  "display": {
    "style": "powerline",
    "lines": [
      {
        "segments": {
          "directory": {
            "enabled": true,
            "style": "basename"
          }
        }
      },
      {
        "segments": {
          "metrics": {
            "enabled": true,
            "showResponseTime": true,
            "showLastResponseTime": true,
            "showDuration": true,
            "showMessageCount": true,
            "showLinesAdded": true,
            "showLinesRemoved": true
          }
        }
      }
    ]
  }
}
